# App
APP_NAME=InterviewPrep
ENV=dev
SECRET_KEY=change_this_to_a_long_random_secret
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Database (Postgres)
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/interviewprep

# DeepSeek (example)
DEEPSEEK_API_KEY=your_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# =========================
# TEXT TO SPEECH (ElevenLabs)
# =========================
# Choose provider priority
TTS_PRIMARY=elevenlabs
TTS_FALLBACK=default

ELEVENLABS_API_KEY=your_key_here
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
ELEVENLABS_MODEL_ID=eleven_turbo_v2_5        # faster / lower latency
ELEVENLABS_OUTPUT_FORMAT=mp3_22050_32        # smaller payload for faster start

# Optional: request timeout seconds
TTS_TIMEOUT_SECONDS=20

# =========================
# TEXT TO SPEECH (ElevenLabs)
# =========================
TTS_PROVIDER=elevenlabs

ELEVENLABS_API_KEY=your_actual_api_key_here
ELEVENLABS_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
ELEVENLABS_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_OUTPUT_FORMAT=mp3_44100_128

# Optional: request timeout seconds
TTS_TIMEOUT_SECONDS=20
